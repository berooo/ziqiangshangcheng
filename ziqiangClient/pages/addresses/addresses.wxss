.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: row;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
   padding: 40rpx 0;
  align-items: center;
  background: #FFE4E1;
}
.add {
  margin-left: 30%;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.addtext{
  position: relative;
  font-family: '华文细黑';
  margin-left: 0%;
}

.edit-image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 20rpx;
}
.select-image {
  width: 40rpx;
  height:40rpx;

}

.column {
  display: flex;
  flex-direction: column;
  margin-left: 20%;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}