/* addaddresses.wxss */
.mylist {
  background-color:white;
  height: 80rpx;
  margin-bottom: 2rpx;   
}
.list_top{
  margin-top: 20rpx;
}
.list-item{
    position: relative;
  height:40rpx;
  font-size: 35rpx;
  font-family: '华文细黑';
  top:15rpx;
  left:30rpx;
}
.mine_head {
  width: 100%;
  box-sizing:border-box;
  background-color: #F4F4F8;
  font-size: 30rpx;
}
.bottom-border{
   border-bottom: 1rpx solid silver;  
}
.top-border{
  border-top:3rpx solid silver;
}

.content{

   position: relative;
  height:40rpx;
  font-size: 35rpx;
  font-family: '华文细黑';
  top:15rpx;
  left:100rpx;
}
.button-gray {
  background-color: #c4c4c4; /* Green */
  width: 50%;
}
.button-red {
  background-color: #f44336; /* 红色 */
  width: 50%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 100%;
  height: 100%;
  line-height: 100rpx;
}
.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}