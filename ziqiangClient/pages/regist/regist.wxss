/* regist.wxss */
.container-hang{
  display: flex;
  flex-direction:row;
  background-color: #fff;
}
.view_logup_form{
    width: 95%;
    background-color: rgba(255,255,255,0.35);
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-radius:16rpx;
    margin: 24rpx;
    border-style: solid;
    border-color: rgba(235,235,235,0.8);
    border-width: 2rpx;
}
.wx-view_log_item{
    width: 100%; 
    height: 100rpx;
    display: flex; 
    align-items: center; 
    justify-content: space-between; 
    border-style: solid;
    border-top-style: none;
    border-right-style: none;
    border-left-style: none;
    border-bottom-width: 2rpx;
    border-bottom-color: rgb(235,235,235);
    background-color: rgba(255, 255, 255,0.3);
    padding-left: 32rpx;
}
.btn_getnum{
    font-size: 30rpx;
    font-weight: 550;
    font-family: 宋体;
    color: rgb(35,35,35);
    background-color: rgba(255,255,255,0.7);
    border:solid;
    border-color: rgba(0,0,0,0.4);
    border-width: 2rpx;
    border-radius: 8rpx;
    width: 172rpx;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-right: 50rpx;
}
.wx-button_logup{
    font-size:34rpx; 
    width: 86%; 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    text-align: center; 
    flex: 0 1 auto; 
    align-self: center; 
    margin-top: 24rpx;
}
.wx_input{
    font-size: 34rpx;
    font-weight: 550;
    font-family: 宋体;
    background:transparent;
    color: rgb(35,35,35);
}
.c-fullwidth {
  width: 100%;
}
.c-block {
  display: block;
}
.wx-view_login{
    display: flex; 
    width: 100%; 
    flex-direction: column; 
    justify-content:flex-start; 
    align-items: center; 
    float: none; 
    background:transparent;
  }