/* orders.wxss */
.addaddresses{
   display: flex;
  flex-direction: row;
  padding: 50rpx 0;
  align-items: center;
  background: #FFE4E1;
}
.add {
  width: 64rpx;
  height: 64rpx;
  margin-left: 30%;
  border-radius: 0%;
}
.addtext{
  position: relative;
  font-family: '华文细黑';
  left: 5rpx;
  
}
._column {
  
  align-items: center;
  display: flex;
  flex-direction: column;
   background: #FFE4E1;
   padding: 50rpx 0;
}
.scroll {
  margin-bottom: 120rpx;
}
.order_container{
  display: flex;
  flex-direction: row;
}
.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}
.column {
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
    
}

.sku {
  margin-top: 60rpx;
  margin-left: 130rpx;
}
.sku-price {
  color: red;
  position: relative;
  margin-top: 70rpx;
}
.stepper {  
    width: 80px;  
    height: 26px;  
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    margin:0 auto;  
}  
  .title {
  font-size: 38rpx;
  margin-top: 40rpx;
}
.stepper text {  
    width: 19px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
} 
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;

}
.bottom_total .row{
  margin-left: 100rpx;
} 
.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.button-red {
  background-color: #f44336; /* 红色 */
}
.price {
  color: red;
  position: relative;
}
