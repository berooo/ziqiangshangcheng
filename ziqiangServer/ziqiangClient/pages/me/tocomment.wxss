/* tocomment.wxss */
.main-title{
    line-height: 60rpx;
    background-color: #fff;
    border-bottom: 1px solid #eee;
    color: #999;
    font-size: 14px;
    padding-left: .4rem;
}
.input{
  height: 60rpx;
}
.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.button-gray {
  background-color: #c4c4c4; /* Green */
  width: 50%;
}
.button-red {
  background-color: #f44336; /* 红色 */
  width: 50%;
}
.main-title image{
  display:block;
  float:left;
  width:30rpx;
  height:30rpx;
  margin:6px 10rpx 0 0;
}